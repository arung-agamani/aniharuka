    <script>
        $(document).ready(function () {    
            $(function () {
                $('#post-content').find('img').addClass('img-fluid');
                $('.navbar').hide();

                $(window).scroll(function () {
                    if ($(this).scrollTop() > ($('.jumbotron').height() + $('#banner-blog-post').height())) {
                        $('.navbar').fadeIn();
                    } else {
                        $('.navbar').fadeOut();
                    }
                });

                $('#post-content > p > img').addClass('img-fluid')
            });
        });
